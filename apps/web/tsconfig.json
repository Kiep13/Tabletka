{
  "extends": "tsconfig/nextjs.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "paths": {
      "@components/*": ["components/*"],
      "@environments/*": ["environments/*"],
      "@mocks/*": ["mocks/*"],
      "@pages/*": ["pages/*"],
      "@utils/*": ["utils/*"],
    }
  }
}
